public class Replace {

    public static void main(String[] args) {
        Template template = new Template();
        System.out.println("名前を入力してください");
        String name = new java.util.Scanner(System.in).nextLine();
        System.out.println("購入した商品の個数を入力してください");
        int num = new java.util.Scanner(System.in).nextInt();
        for (int i = 0; i < num; i++) {
            System.out.println("購入した商品明細を入力してください");
            String details = new java.util.Scanner(System.in).nextLine();
            System.out.println("購入した商品の金額を入力してください");
            int price = new java.util.Scanner(System.in).nextInt();
            template.name = name;
            template.name();
            template.details = details;
            template.price = price;
            template.items();
            template.total();
        }
    }
}
